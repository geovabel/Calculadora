<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.calculadora.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtmostrar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnfact" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/btnfact"
        android:layout_alignTop="@+id/btnln"
        android:layout_alignParentStart="true"
        android:onClick="onClickFact" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LN"
        android:id="@+id/btnln"
        android:layout_alignTop="@+id/btnborrar"
        android:layout_toStartOf="@+id/btnborrar"
        android:onClick="onClickLog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/btnborrar"
        android:layout_above="@+id/btnraiz"
        android:layout_toStartOf="@+id/btnraizcubo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#2"
        android:id="@+id/btncuadrado"
        android:layout_below="@+id/btnac"
        android:layout_toStartOf="@+id/btncubo"
        android:onClick="onClickCuadradoNum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#3"
        android:id="@+id/btncubo"
        android:layout_below="@+id/btnac"
        android:layout_toStartOf="@+id/btnraiz"
        android:onClick="onClickCubooNum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/2"
        android:id="@+id/btnraiz"
        android:layout_alignTop="@+id/btnraizcubo"
        android:layout_toStartOf="@+id/btnraizcubo"
        android:onClick="onClickRaiz" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/btnac"
        android:layout_above="@+id/btnraiz"
        android:layout_toEndOf="@+id/btnborrar"
        android:onClick="onClickLimpia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/3"
        android:id="@+id/btnraizcubo"
        android:layout_above="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickRaizcubo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_alignTop="@+id/btn8"
        android:layout_toStartOf="@+id/btn8"
        android:onClick="onClickBtn7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickBtn8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_above="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:onClick="onClickBtn9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/btndiv"
        android:layout_above="@+id/btnmult"
        android:layout_alignParentEnd="true"
        android:onClick="onClickDivision" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn2"
        android:onClick="onClickBtn4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignBottom="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickBtn5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_alignBottom="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:onClick="onClickBtn6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btnmult"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignStart="@+id/btndiv"
        android:onClick="onClickMultiplicacion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_toStartOf="@+id/btn2"
        android:onClick="onClickBtn1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn5"
        android:layout_toStartOf="@+id/btn3"
        android:onClick="onClickBtn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn6"
        android:layout_toStartOf="@+id/btnrestar"
        android:onClick="onClickBtn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnrestar"
        android:layout_below="@+id/btnmult"
        android:layout_alignParentEnd="true"
        android:onClick="onClickResta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/btn"
        android:layout_below="@+id/btn1"
        android:layout_toStartOf="@+id/btn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:onClick="onClickBtn0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnigual"
        android:layout_alignTop="@+id/btnsuma"
        android:layout_toStartOf="@+id/btnsuma"
        android:onClick="onClickIgual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnsuma"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="onClickSuma" />
</RelativeLayout>
